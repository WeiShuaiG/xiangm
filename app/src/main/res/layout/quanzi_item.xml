<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/my_shou_rexiao">

        <RelativeLayout
            android:id="@+id/ding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/quanzi_tx"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/quanzi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/quanzi_tx"
                android:text="ssss"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/quanzi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="ssssss" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pl"
            android:layout_below="@+id/ding"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/quanzi_xq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tx"
            android:layout_below="@+id/pl"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridView
                android:id="@+id/quanzi_image"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:src="@mipmap/ic_launcher"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/tx"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_24">

            <TextView
                android:id="@+id/quanzi_zanshu"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="5555"/>
            <CheckBox
                android:id="@+id/quanzi_dz"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:button="@null"

                android:layout_toLeftOf="@+id/quanzi_zanshu"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/check_box"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
