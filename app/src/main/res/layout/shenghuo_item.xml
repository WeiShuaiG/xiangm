<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="@dimen/dp_151"
            android:layout_height="@dimen/dp_174"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/my_shou_rexiao"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/my_shenghuo_img"
                android:layout_width="@dimen/dp_131"
                android:layout_height="@dimen/dp_102"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/my_shenghuo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:lines="1"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/my_shenghuo_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:textColor="#ff0000"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
