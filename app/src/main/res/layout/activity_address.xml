<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.umeng.soexample.AddressActivity">

    <TextView
        android:id="@+id/shouhuodizhi"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:text="我的收货地址"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address_finsh"
        android:layout_alignParentRight="true"
        android:text="完成"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_address"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/address_finsh"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/add_address"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff5e70"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="新增收货地址"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30" />
</RelativeLayout>
