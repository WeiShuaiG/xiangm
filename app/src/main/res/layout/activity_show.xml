<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umeng.soexample.ShowActivity">


    <FrameLayout
        android:id="@+id/shou_vp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="match_parent"></FrameLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="@mipmap/rectangle_6"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_shou"
            android:checked="true"
            android:background="@drawable/shou_check"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_26"
            android:button="@null"
            android:layout_height="@dimen/dp_26" />
        <RadioButton
            android:id="@+id/rb_qiu"
            android:background="@drawable/qiu_check"
            android:layout_width="@dimen/dp_34"
            android:button="@null"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_height="@dimen/dp_34" />

        <RadioButton
            android:id="@+id/rb_gou"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@mipmap/commom_tab_btn_shopping_cart_n_hdpi"
            android:button="@null" />
        <RadioButton
            android:id="@+id/rb_ye"
            android:background="@drawable/ye_check"
            android:layout_width="@dimen/dp_26"
            android:button="@null"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_height="@dimen/dp_26" />
        <RadioButton
            android:id="@+id/rb_my"
            android:background="@drawable/my_check"
            android:layout_width="@dimen/dp_26"
            android:button="@null"
            android:layout_height="@dimen/dp_26" />

    </RadioGroup>
    


</RelativeLayout>


