<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.umeng.soexample.MyScrollView
        android:id="@+id/my_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shou_xq_back"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/common_nav_btn_back_n" />

            <ImageView
                android:id="@+id/shou_xq_img1"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_306" />

            <RelativeLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">

                <TextView
                    android:id="@+id/shou_xq_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥159"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="已售100000件"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <TextView
                android:id="@+id/shou_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="子弹头口红"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重量"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="1kg"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="商品详情"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_marginTop="@dimen/dp_4"
                android:background="#ff5e70"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"/>
            <ImageView
                android:id="@+id/shou_shop_img_xq"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_306" />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="产品介绍"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shou_shop_xq_cp_name"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="MAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/shou_shop_xq_cpjs_img"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_306" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="评价"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_marginTop="@dimen/dp_4"
                android:background="#ff5e70"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"/>
            
        </LinearLayout>
    </com.umeng.soexample.MyScrollView>


</LinearLayout>
